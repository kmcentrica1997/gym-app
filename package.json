{
  "name": "MyGymApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@react-navigation/bottom-tabs": "^6.3.1",
    "@react-navigation/drawer": "^6.5.0",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/native-stack": "^6.6.2",
    "react": "18.1.0",
    "react-native": "0.70.6",
    "react-native-svg": "^13.6.0",
    "styled-components": "^5.3.6"
  },
  "resolutions": {
    "styled-components": "^5",
    "@types/react": "18.1.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "prettier --write",
      "bash -c tsc --noEmit"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react": "^18.0.21",
    "@types/react-native": "^0.70.6",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@types/styled-components-react-native": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "0.72.3",
    "react-test-renderer": "18.1.0",
    "ts-node": "^10.9.1",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^4.8.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jest/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx)",
      "**/(*.)+(spec).(ts|tsx)",
      "!**/__tests__/**/mocks.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/mocks.ts",
      "!**/*.stories.tsx",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/utils/testing/*",
      "!<rootDir>/src/utils/testing/storybook/*"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 75,
        "statements": 75
      }
    },
    "moduleNameMapper": {
      "\\.(png|jpg|ico|jpeg|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest/__mocks__/ImageMock.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(react-native|react-native-config|@react-native/polyfills|@react-native/assets))"
    ]
  }
}
